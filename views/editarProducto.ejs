<%- include("templates/header.ejs", {titulo: "Editar Producto"}) %>
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Editar Producto</h2>

                    <form action="/editarProducto" method="POST">
                        <input type="hidden" name="id" value="<%= productoBD._id %>">

                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre del Producto</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= productoBD.nombre %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción</label>
                            <textarea class="form-control" id="descripcion" name="descripcion" rows="3"><%= productoBD.descripcion %></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="precio" class="form-label">Precio</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" id="precio" name="precio" min="0" step="0.01" value="<%= productoBD.precio %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock" min="0" value="<%= productoBD.stock %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="categoria" class="form-label">Categoría</label>
                            <select class="form-select" id="categoria" name="categoria" required>
                                <option value="">Selecciona una categoría</option>
                                <option value="Hombre" <%= productoBD.categoria === 'Hombre' ? 'selected' : '' %>>Hombre</option>
                                <option value="Mujer" <%= productoBD.categoria === 'Mujer' ? 'selected' : '' %>>Mujer</option>
                                <option value="Niños" <%= productoBD.categoria === 'Niños' ? 'selected' : '' %>>Niños</option>
                                <option value="Accesorios" <%= productoBD.categoria === 'Accesorios' ? 'selected' : '' %>>Accesorios</option>
                            </select>
                        </div>

                        <!-- imagen input removed -->

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a href="/productos" class="btn btn-secondary ms-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("templates/footer.ejs") %>
